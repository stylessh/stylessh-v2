---
import ProjectList from "./ProjectList";
import Repositories from "./Repositories.astro";
---

<section
  class="min-h-screen overflow-hidden"
  id="projects"
  data-scroll
  data-scroll-offset="75%"
  data-scroll-id="projects"
>
  <header class="my-12 text-center">
    <h2
      class="text-white text-2xl font-bold"
      data-scroll
      data-scroll-speed="1.2"
    >
      Selected projects.
    </h2>
    <!-- Line -->
    <div class="h-16 w-0.5 bg-gray-200 m-6 mx-auto" data-scroll></div>
  </header>

  <ProjectList client:load />
  <Repositories />
</section>
