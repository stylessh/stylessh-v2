<div
  class="h-screen bg-[#0f0f0f] fixed inset-0 z-50 flex justify-center items-center"
  id="welcome"
>
  <div class="text-center content">
    <div class="bg-gray-500 w-64 h-1">
      <div class="bg-white w-0 h-1" id="progress-bar"></div>
    </div>
  </div>
</div>

<script>
  import { gsap } from "gsap";

  const progressBar = document.querySelector("#progress-bar");
  const welcome = document.querySelector("#welcome");

  const load = () => {
    // remove scroll bar
    document.body.style.overflow = "hidden";

    gsap.to(progressBar, {
      width: "100%",
      duration: Math.random() * 2,
      onComplete: () => detachLoader(),
    });
  };

  const detachLoader = () => {
    // timeline
    const tl = gsap.timeline({ defaults: { ease: "power3.inOut" } });

    tl.to(".content", { opacity: 0, duration: 0.5 }).to(welcome, {
      height: 0,
      duration: 1,
      delay: 0.5,
    });

    // attach scroll bar
    document.body.style.overflow = "auto";
  };

  window.addEventListener("load", load);
</script>
